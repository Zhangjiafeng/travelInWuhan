  .item .itemPic {
    height: 100%;
    width: 100%;
    border-radius: 50%;
    z-index: -1; }
  .item .commentItem {
    position: absolute;
    width: 220rpx;
    height: 220rpx;
    left: -15rpx;
    top: -20rpx;
    z-index: 100;
    border-radius: 50%; }
    .item .commentItem .commentView {
      position: relative; }
      .item .commentItem .commentView .commentText {
        position: absolute;
        text-align: center;
        display: block;
        font-size: 28rpx;
        left: 26%;
        color: white;
        top: 120rpx;
        background: #D4B763;
        border-radius: 10rpx;
        padding-left: 10rpx;
        padding-right: 10rpx; }
  .item .unLock {
