.contentTitle {
  position: absolute;
  top: 190rpx;
  width: 66%;
  left: 17%; }
  .contentTitle .titlePic {
    width: 100%;
    height: 100rpx; }
  .contentTitle .titleTextView {
    position: absolute;
    top: 8%;
    width: 50%;
    left: 25%;
    text-align: center; }
    .contentTitle .titleTextView .titleText {
      font-size: 38rpx;
      color: white; }
