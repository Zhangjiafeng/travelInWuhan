.content {
  width: 94%;
  height: 1000rpx;
  background: white;
  border-radius: 50rpx;
  margin: 0 auto; }
  .content .nullItem {
    width: 100%;
    height: 50rpx; }

.confirm {
  position: absolute; }

.item {
  margin-top: 50rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  float: left;
  margin-left: 27rpx;
  border: 10rpx solid;
  position: relative; }
  .item .itemBg {
    position: absolute;
    width: 220rpx;
    height: 220rpx;
    left: -15rpx;
    top: -20rpx;
