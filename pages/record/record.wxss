
page {
  height: 100%;
  background: #0097FF; }

.record {
  height: 100%;
  position: relative; }

.topBack {
  width: 100%;
  height: 240rpx;
  background: #0097FF;
  position: relative; }
  .topBack .topBackHead {
    position: absolute;
